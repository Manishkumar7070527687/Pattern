#include<iostream>
using namespace std;
int main(){
int n;

cin>>n;
for (int i = 0; i <n; i++)
{
    for(int j=0;j<(n-i);j++){
        cout<<" ";                                //Alphabet pyramid
    }

    for(int k=0;k<(2*i-1);k++){
        char c=(char)('A'+k);
        cout<<c;
    }

    cout<<endl;
}

    return 0;
}
/*
       A
      ABC
     ABCDE
    ABCDEFG
   ABCDEFGHI
  ABCDEFGHIJK
 ABCDEFGHIJKLM
*/
